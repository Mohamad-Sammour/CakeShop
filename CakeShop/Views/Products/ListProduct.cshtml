@model IEnumerable<CakeShop.Model.Product>

@{
    ViewData["Title"] = "ListProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />


<p>@ViewBag.sessionName</p>



   <div class="container">
       <div class="row">

           <div>
               <form asp-action="Search" asp-controller="Products">
                   <div class="input-group">
                       <div class="form-outline">
                           <input type="text" name="search" id="search" placeholder="Search on product" />
                           <label class="form-label" for="form1">Search</label>
                       </div>
                       <button id="search-button" type="button" class="btn btn-primary">
                           <i class="fas fa-search"></i>
                       </button>
                   </div>

               </form>
           </div>

           <br />
           <br />


           @foreach (var item in Model)
           {


               <div class="col-md-4">


                   <div class="card-body">
                       <div>
                           ProductName :  @Html.DisplayFor(modelItem => item.ProductName)

                       </div>

                       <div>
                           Price : @Html.DisplayFor(modelItem => item.Price)
                       </div>

                       <div>
                           Quantity : @Html.DisplayFor(modelItem => item.Quantity)

                       </div>

                       <div>
                           <img src="@Url.Content("~/Images/"+item.ProductImage)" width="100" height="100" alt="img..." />

                       </div>
                       <br />

                       <p>
                           <a asp-action="Details" asp-route-id="@item.CategoryId" class="btn btn-info"><i class="fas fa-th-list"></i></a>
                       </p>

                       <div>
                           <a asp-action="Home">Back to List</a>
                       </div>

                   </div>
               </div>

           }
       </div>
            </div>
