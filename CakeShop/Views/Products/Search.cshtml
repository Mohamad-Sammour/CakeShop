@model IEnumerable<CakeShop.Model.Product>

@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>result</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                <a href="~/Carts/Index" class="nav-item nav-link, fa fa-cart-plus "></a>
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                <img src="@Url.Content("~/Images/"+item.ProductImage)" width="100" height="100" alt="img..." />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
           
            <td>
                <form asp-action="Create" asp-controller="Carts">
                    <input type="hidden" name="customser" value="@ViewBag.sessionID" />
                    <input type="submit" value="Add To Cart"/>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
