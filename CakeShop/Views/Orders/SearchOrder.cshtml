@model IEnumerable<CakeShop.Model.Order>

@{
    Layout = "_Admin";
}

<div class="col-md-10 d-block m-auto">
    <div class="card">
        <div class="card-header">
            <h1> Add Product </h1>
        </div>
        <div class="card-body">
            <form asp-action="OrdersInRang">
                <div class="row">
                    <div class="col">
                        <label>Start Date</label>
                        <input type="date" name="start" />
                    </div>
                    <div class="col">
                        <label>End Date</label>
                        <input type="date" name="end" />
                    </div>
                    <div class="col">
                        <input type="submit" value="Search" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="col-lg-12 d-block m-auto">
    <div class="card">
        <div class="card-header">
            <h1> Result search </h1>
        </div>
        <div class="card-body">
            <div class="col-11 m-auto">
            </div>
        </div>
    </div>
</div>
       
        <body>
            
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.OrderDate)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Cart)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Product)
                        </th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.OrderDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cart.CartId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.ProductId)
                        </td>
                       

                    </tr>
                    }
                </tbody>
            </table>
        </body>

